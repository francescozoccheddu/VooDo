<Window
    x:Class="VooDo.DesktopTestbench.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:voodo="using:VooDo.WinUI.Xaml">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Slider
            x:Name="m_Slider"
            Grid.Row="0"
            MinWidth="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:FieldModifier="public"
            Maximum="20"
            Minimum="10" />

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock.Text>
                <voodo:VooDo>
                    if (root.m_Slider.Value &lt; 12)
                    return &quot;Very Small&quot;;
                    if (root.m_Slider.Value &lt; 14)
                    return &quot;Small&quot;;
                    if (root.m_Slider.Value &lt; 16)
                    return &quot;Medium&quot;;
                    if (root.m_Slider.Value &lt; 18)
                    return &quot;Large&quot;;
                    return &quot;Very large&quot;;
                </voodo:VooDo>
            </TextBlock.Text>
        </TextBlock>

    </Grid>

</Window>
