<Window
    x:Class="VooDo.DesktopTestbench.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:voodo="using:VooDo.WinUI.Xaml">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        <Slider
            x:Name="m_Slider"
            Grid.Row="0"
            MinWidth="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:FieldModifier="public"
            Maximum="20"
            Minimum="10" />

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <voodo:Standalone.Code>
                this.Text = (glob Smooth(1000)).ToString();
            </voodo:Standalone.Code>
            
        </TextBlock>
    </Grid>

</Window>
