<Window
    x:Class="VooDo.DesktopTestbench.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:voodo="using:VooDo.WinUI.Xaml">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Slider
            Grid.Row="0"
            x:Name="m_Slider"
            x:FieldModifier="public"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MinWidth="200"
            Minimum="10"
            Maximum="20"/>

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Lorem Ipsum"
            FontSize="{voodo:VooDo Code=glob Smooth(root.m_Slider.Value)}"
            />

    </Grid>

</Window>
