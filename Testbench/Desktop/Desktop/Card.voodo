global bool isHovered;
if (this.PointerEntered) 
{
	isHovered = true;
	root.m_status.SelectedItem = (Item) this.DataContext;
}
isHovered &= !this.PointerExited;
double focus = glob Smooth(isHovered ? 1 : 0);
float scale = (float) Lerp(0.975, 1, focus);
((ScaleTransform)this.RenderTransform).ScaleX = scale;
((ScaleTransform)this.RenderTransform).ScaleY = scale;
this.Opacity = Lerp(0.75, 1, focus);
this.CornerRadius = new(Lerp(5, 2, focus));