<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.2" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.8.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="VooDo" Version="0.0.6" GeneratePathProperty="true"/>
    <PackageReference Include="VooDo.Runtime" Version="0.0.1" GeneratePathProperty="true"/>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.9.1" GeneratePathProperty="true"/>
  </ItemGroup>

  <PropertyGroup>
    <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
  </PropertyGroup>

  <Target Name="GetDependencyTargetPaths">
    <ItemGroup>
      <TargetPathWithTargetPlatformMoniker Include="$(PKGVooDo)\lib\netstandard2.0\VooDo.dll" IncludeRuntimeDependency="true" />
      <TargetPathWithTargetPlatformMoniker Include="$(PKGVooDo_Runtime)\lib\netstandard2.0\VooDo.Runtime.dll" IncludeRuntimeDependency="true" />
      <TargetPathWithTargetPlatformMoniker Include="$(PKGAntlr4_Runtime_Standard)\lib\netstandard2.0\Antlr4.Runtime.Standard.dll" IncludeRuntimeDependency="true" />
    </ItemGroup>
  </Target>

</Project>
